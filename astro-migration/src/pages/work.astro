---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageContentWrapper from '../components/PageContentWrapper/PageContentWrapper.astro';
import ProjectCard from '../components/ProjectCard/ProjectCard.astro';
import projects from '../data/projects.json';
---

<BaseLayout title="Nate Young | Work">
  <PageContentWrapper>
    <div class="py-12">
      <h1 class="text-4xl font-bold mb-12">Work</h1>
      
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-6 text-netflix-red">Current Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.current.map((project) => (
            <ProjectCard 
              name={project.name}
              title={project.title}
              timePeriod={project.timePeriod}
              description={project.description}
              techStack={project.techStack}
              current={project.current}
            />
          ))}
        </div>
      </section>
      
      <section>
        <h2 class="text-2xl font-bold mb-6 text-netflix-red">Past Work</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.past.map((project) => (
            <ProjectCard 
              name={project.name}
              title={project.title}
              timePeriod={project.timePeriod}
              description={project.description}
              techStack={project.techStack}
              current={project.current}
            />
          ))}
        </div>
      </section>
    </div>
  </PageContentWrapper>
</BaseLayout>
