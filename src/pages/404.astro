---
import BaseLayout from "../layouts/BaseLayout.astro"
import PageContentWrapper from "../components/PageContentWrapper.astro"
---

<BaseLayout title='Nate Young | Page Not Found'>
  <PageContentWrapper>
    <div class='py-20 text-center'>
      <h1 class='text-6xl font-bold mb-6'>404</h1>
      <h2 class='text-3xl text-netflix-red mb-8'>Page Not Found</h2>
      <p class='text-xl text-light-gray mb-10'>
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href='/'
        class='bg-netflix-red hover:bg-red-700 text-white font-bold py-3 px-6 rounded-md inline-block transition-colors'
      >
        Go Home
      </a>
    </div>
  </PageContentWrapper>
</BaseLayout>
