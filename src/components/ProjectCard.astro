---
interface Props {
  name: string;
  title?: string;
  timePeriod: string;
  description: string;
  techStack: string;
  current: boolean;
}

const { name, title, timePeriod, description, techStack, current } = Astro.props;
---

<div class="bg-dark-gray rounded-lg p-6 mb-6 hover:shadow-lg transition-shadow duration-300">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-bold">
      {name}
      {title && <span class="text-light-gray font-normal text-lg ml-2">({title})</span>}
    </h3>
    <span class="text-sm bg-netflix-red px-2 py-1 rounded text-white">{timePeriod}</span>
  </div>
  <p class="text-light-gray mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    {techStack.split(',').map(tech => (
      <span class="text-xs bg-medium-gray text-white px-2 py-1 rounded">{tech.trim()}</span>
    ))}
  </div>
</div>
